generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Roles {
  USER
  ADMIN
}

model Cripto_data {
  id                String              @id @default(uuid())
  idCMC             Int                 
  ticker            String?
  entrada           String?
  precoAtual        String?
  alocacao          String?
  alocacaoAtual     String?
  rentabilidade     String?
  vies              String?
  quantidade        String?
  valorInvestido    String?
  isVisible Boolean @default(false)
  updateAt DateTime @updatedAt
  lastAutoUpdate String?
  cripto_data_type  String?  
  Historic_buy_sell Historic_buy_sell[]
}

model Historic_buy_sell {
  id       String      @id @default(uuid())
  criptoId String
  qnt      Float
  createAt DateTime    @default(now())
  Cripto   Cripto_data @relation(fields: [criptoId], references: [id])
}

model User {
  id           String  @id @default(uuid())
  name         String?
  email        String @unique
  password     String?
  isValid      Boolean @default(false)
  isFirstAcess Boolean @default(true)
  role         Roles   @default(USER)
}
